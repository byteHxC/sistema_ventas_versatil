extends ../layout
block content
	style().
		html{
			background-color: #ffffff;
		}
	script(src="js/buscar.js" type="text/javascript")
	script(src="../../js/buscar.js" type="text/javascript")
	div(class="container")
		div(class="panel panel-primary" style="margin-top:0.5em;")
				div(class="panel-heading" style="background:#4e6073;")
					div(class="row")
						h1(class="planel-title" style="font-size: 25px;text-align:center;") Cat√°logo de invitaciones
						div(class="col-md-10")
				div(class="panel-body" style="background:#cccccc;")
					div(class="row")
						label(class="col-sm-2 text-right control-label") Filtrar por:
						div(class="col-sm-2 text-left" )
							select(name="filtro_por" class="form-control" id="filtro")
								option(value="modelo") ID_Modelo
								option(value="precio") Precio
						div(class="col-sm-2")
							input(type="text" class="col-sm-2 form-control" id="valor" placeholder="Valor de busqueda")
						a(href="/catalogo_selected/:filtro/:valor" style="color:white;" class="btn btn-info fa fa-search" id="link" onclick="buscarCatalogo();")   Buscar
					div(class="row" style="margin-top:2em;")
						each modelo in modelos
							div(class="col-md-4")
								div(class="panel panel-default" style="border-radius: 12px 12px 12px 12px;")
									div(class="panel-body  text-center")
										img(src="../../#{modelo.ruta_imagen}" class="model")
										br
										br
										strong Modelo: #{modelo.id_modelo}
										br
										strong Precio unitario: $ #{modelo.precio_unitario}
										br
										label(style="margin-right: 0.8em;") Agregar
										input(type="checkbox" name="agregar" value="#{modelo.id_modelo}" id="agregar")
					div(class="row")
						div(class="col-sm-12 text-right")
							a(href="/modelosSeleccionados/:modelos" style="color:white;" class="btn btn-success fa fa-cart-plus" onclick="agregarModelos();" name="agregar" id="linkAgregar")   Agrega modelos