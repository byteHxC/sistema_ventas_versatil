extends ../layout
block content
	style().
		html{
			background-color: #ffffff;
		}
	script(src="../../../sweet_alerts/dist/sweetalert.min.js")
	link( rel="stylesheet" type="text/css" href="../../../sweet_alerts/dist/sweetalert.css")
	script(src="js/buscar.js" type="text/javascript")
	script(src="../../../js/buscar.js" type="text/javascript")
	div(class="container")
		div(class="panel panel-primary" style="margin-top:0.5em;")

				div(class="panel-heading" style="background:#4e6073;")
					div(class="row")
						h1(class="planel-title" style="font-size: 2em;text-align:center;") Cat√°logo de invitaciones
						div(class="col-md-10")
				div(class="panel-body" style="background:#cccccc;")
					div(class="row")
						-if(modelos.length == 0){
							div(class="alert alert-warning " role="alert" id="alert")
								button(type="button" class="close" data-dismiss="alert" aria-label="Close")
									span(aria-hidden="true") &times;
								strong() No existen registros para ese valor.
						-}
					div(class="row" style="margin-top:1em;")
						label(class="col-sm-2 text-right control-label") Filtrar por:
						div(class="col-sm-2 text-left" )
							select(name="filtro_por" class="form-control" id="filtro")
								option(value="modelo") ID_Modelo
								option(value="precio") Precio
						div(class="col-sm-2")
							input(type="number" class="col-sm-2 form-control" id="valor" placeholder="Valor de busqueda")
						a(href="#" style="color:white;" class="btn btn-info fa fa-search" id="link" onclick="buscarCatalogo(#{id_cliente});")   Buscar
		
					div(class="row" style="margin-top:2em;")
						each modelo in modelos
							div(class="col-md-4")
								div(class="panel panel-default" style="border-radius: 12px 12px 12px 12px;")
									div(class="panel-body  text-center")
										img(src="../../../#{modelo.ruta_imagen}" class="model")
										br
										br
										strong Modelo: #{modelo.id_modelo}
										br
										strong Precio unitario: $ #{modelo.precio_unitario}
										br
										label(style="margin-right: 0.8em;") Agregar
										input(type="checkbox" name="agregar" value="#{modelo.id_modelo}" id="agregar")
					div(class="row")
						div(class="col-sm-12 text-right")
							a(href="/modelos_seleccionados/:modelos/" style="color:white;" class="btn btn-success fa fa-cart-plus" onclick="agregarModelos(#{id_cliente});" name="agregar" id="linkAgregar")   Agrega modelos

	div(style="border-top:3em;")
		p(style="color:white;") .
	style().
		.footer {
		    position: fixed;
		    bottom: 0;
		    width: 100%;
		    height: 10px;
		    background: #f5f2f0;
		    align: center;
		    display: table;
		    font-family: Helvetica, Arial, sans-serif;   
		}
	div(class="footer")
		h1(style="font-size:1em;vertical-align: middle;text-align: center;") Interfaz 7 - Versatil
			

