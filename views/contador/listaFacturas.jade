extends ../layout
block content
	style().
		html{
			background-color: #f2f2f2;
		}
	script(src="../../js/validators.js")
	script(src="../../js/parseTable.js")
	script(src="../../../js/parseTable.js")
	script(src="../../../js/validators.js")
	script(src="node_modules/jquery/dist/jquery.min.js")
	div(class="container-fluid")
		div(class="row" style="background: #465669;")
			div(class="col-md-12 text-center") 
				h2(style="color:white;font-size:2em;") Lista de facturas pendientes - Contador
		div(class="container")
			div(class="row" style="margin-top:2em;")
				table(class="table table-striped" style=" margin-top:3em;")
					thead
						tr
							th(style="text-align:center;") Nº Pedido
							th(style="text-align:center;") Fecha
							th(style="text-align:center;") Información de pedido

					tbody
						each pedido in pedidos
							tr
								td(style="text-align:center;" contenteditable=false) #{pedido.no_pedido}
								td(style="text-align:center;" contenteditable=false) #{new Date(pedido.fecha).getFullYear()}/#{new Date(pedido.fecha).getMonth()+1}/#{new Date(pedido.fecha).getDate()}
								td(style="text-align:center;")
									a(href="/factura/#{pedido.no_pedido}/" style="color:white;" class="btn btn-success") Información pedido

	div(style="border-top:3em;")
		p(style="color:white;") .
	style().
		.footer {
		    position: fixed;
		    bottom: 0;
		    width: 100%;
		    height: 10px;
		    background: #f5f2f0;
		    align: center;
		    display: table;
		    font-family: Helvetica, Arial, sans-serif;   
		}
	div(class="footer")
		h1(style="font-size:1em;vertical-align: middle;text-align: center;") Interfaz 11 - Versatil
			



